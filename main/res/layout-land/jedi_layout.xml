<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="8dp"
    tools:context="com.example.android.starwarsquizz.MainActivity"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants">

    <ImageView
        android:id="@+id/saber_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/jedi_saber"
        android:src="@drawable/lightsaber_blue" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/saber_top"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:background="@color/jedi_question_background"
                android:gravity="start"
                android:paddingBottom="2dp"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:text="@string/jedi_question_1"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/jedi_question_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/jedi_question_one_answer_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/jedi_answer_1_1"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/jedi_blue" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/jedi_question_one_answer_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/jedi_answer_1_2"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/jedi_blue" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/jedi_question_one_answer_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/jedi_answer_1_3"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/jedi_blue" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/jedi_question_one_answer_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/jedi_answer_1_4"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/jedi_blue" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:background="@color/jedi_question_background"
                android:gravity="start"
                android:paddingBottom="2dp"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:text="@string/jedi_question_2"
                android:textColor="@android:color/white"
                android:textSize="16sp" />


            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/jedi_question_two_answer_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="4dp"
                android:text="@string/jedi_answer_2_1"
                android:textColor="@android:color/white"
                app:buttonTint="@color/jedi_blue" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/jedi_question_two_answer_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="4dp"
                android:text="@string/jedi_answer_2_2"
                android:textColor="@android:color/white"
                app:buttonTint="@color/jedi_blue" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/jedi_question_two_answer_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="4dp"
                android:text="@string/jedi_answer_2_3"
                android:textColor="@android:color/white"
                app:buttonTint="@color/jedi_blue" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/jedi_question_two_answer_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="4dp"
                android:text="@string/jedi_answer_2_4"
                android:textColor="@android:color/white"
                app:buttonTint="@color/jedi_blue" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:background="@color/jedi_question_background"
                android:gravity="start"
                android:paddingBottom="2dp"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:text="@string/jedi_question_3"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/jedi_question_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/jedi_question_three_answer_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/jedi_answer_3_1"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/jedi_blue" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/jedi_question_three_answer_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/jedi_answer_3_2"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/jedi_blue" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/jedi_question_three_answer_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/jedi_answer_3_3"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/jedi_blue" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/jedi_question_three_answer_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/jedi_answer_3_4"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/jedi_blue" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:background="@color/jedi_question_background"
                android:gravity="start"
                android:paddingBottom="2dp"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:text="@string/jedi_question_4"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/jedi_answer_question_four"
                android:layout_width="140dp"
                android:layout_height="28dp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/jedi_textbox"
                android:gravity="center_vertical"
                android:inputType="text"
                android:paddingEnd="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingStart="6dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:imeOptions="actionDone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="26dp"
                android:background="@color/jedi_question_background"
                android:gravity="start"
                android:paddingBottom="2dp"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:text="@string/jedi_question_5"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/jedi_question_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/jedi_question_five_answer_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/jedi_answer_5_1"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/jedi_blue" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/jedi_question_five_answer_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/jedi_answer_5_2"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/jedi_blue" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/jedi_question_five_answer_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/jedi_answer_5_3"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/jedi_blue" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/jedi_question_five_answer_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/jedi_answer_5_4"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/jedi_blue" />

            </RadioGroup>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="94dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/saber_top"
        android:background="@android:color/black"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_border"
            android:onClick="goBack"
            android:text="@string/go_back"
            android:textColor="@color/yellow" />

        <TextView
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/number_of_marked_questions"
            android:textColor="@color/yellow"
            android:textSize="15sp" />

        <Button
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_border"
            android:onClick="finish"
            android:text="@string/done"
            android:textColor="@color/yellow" />

    </LinearLayout>

</RelativeLayout>



